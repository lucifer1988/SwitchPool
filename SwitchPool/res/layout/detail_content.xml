<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp" >

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toolbar_sec_bg"
        android:id="@+id/linerLayout_detail_content_toolbar" >
        
         <Button
            android:id="@+id/button_detail_content_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/translucent"
            android:text="@string/detail_content_tab"
            android:textColor="@color/detail_toolbutton_color"
            android:textSize="15sp" />
                
          <Button
            android:id="@+id/button_detail_content_content1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/translucent"
            android:text="@string/detail_content_content1"
            android:textColor="@color/detail_toolbutton_color"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>
